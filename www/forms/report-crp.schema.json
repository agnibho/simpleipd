{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "crp",
    "description": "CRP",
    "type": "object",

    "properties": {
        "date": {
            "description": "Date",
            "type": "string",
            "format": "date"
        },
        "time": {
            "description": "Time",
            "type": "string",
            "format": "time"
        },
        "sample": {
            "description": "Sample",
            "type": "string"
        },
        "ldh": {
            "description": "CRP (mg/L)",
            "type": "number",
            "range": [null,5]
        }
    },
    "required": ["date"]
}
